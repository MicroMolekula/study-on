    <h1>{{ course.title }}</h1>
    <div>{{ course.description }}</div>


    <h2>Уроки</h2>
    <ul>
    {% for lesson in course.lessons %}
        <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}"><li>{{lesson.title}}</li></a>
    {% endfor %}
    </ul>

    <br>
    <br>
    <a href="{{ path('app_course_index') }}">Назад к списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
