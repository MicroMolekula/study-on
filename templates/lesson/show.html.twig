{% extends 'base.html.twig' %}

{% block title %}{{lesson.title}}/{{lesson.course.title}}/StudyOn{% endblock %}

{% block body %}
    <h1>{{ lesson.title }}</h1>

    <div style="font-size: 18px;"> Курс: <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.title }}</a></div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="mt-3 mb-3" style="display:flex; flex-direction: row; gap: 10px;"> 
            <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}" class="btn btn-outline-secondary">Редактировать</a>
            {{ include('lesson/_delete_form.html.twig') }}
        </div>
    {% endif %}

    <div class="card mt-3" style="padding: 14px;">{{ lesson.content }}</div>

{% endblock %}
